#:include telas/kv/tela_insert.kv
#:include telas/kv/tela_consulta.kv
#:include telas/kv/tela_alterar.kv
#:include telas/kv/tela_excluir.kv


Gerenciador_Telas:
    Menu_Principal:
    Tela_Insert:
    Tela_Consulta:
    Tela_Alterar:
    Tela_Excluir:
    

<Menu_Principal>
    name: "menu"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "CRUD - Funcionario"
            font_size: 38
            size_hint: (1, 0.30)
        
        
        Button:
            text: "Inserir Funcionario"
            font_size: 32
            size_hint: (1, .2)
            on_release: 
                app.root.current = "tela_insert"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Consultar Funcionario"
            font_size: 32
            size_hint: (1, .2)
            on_release: 
                app.root.current = "tela_consulta"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Alterar Funcionario"
            font_size: 32
            size_hint: (1, .2)
            on_release: 
                app.root.current = "tela_alterar"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Excluir Funcionario"
            font_size: 32
            size_hint: (1, .2)
            on_release: 
                app.root.current = "tela_excluir"
                root.manager.transition.direction = "left"





