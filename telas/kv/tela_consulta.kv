<Tela_Consulta>
      name: "tela_consulta"

      
      BoxLayout:
            orientation: "vertical"
            size: root.width, root.height

            Label:
                  id: titulo_consulta
                  font_size: 30
                  size_hint: (1, .15)
                  text: "Consultar Dados"

            TextInput:
                  id: input_ID
                  font_size: 25
                  size_hint:(1, .10)
                  multiline: False
                  hint_text: "ID"
                  halign: 'center'

            Label:
                  id: label_nome
                  text: 'Nome: '
                  font_size: 25
                  size_hint: (1, .10)
                  halign: 'center'

            Label:
                  id: label_cpf
                  text: 'CPF'
                  font_size: 25
                  size_hint: (1, .10)
                  halign: 'center'

            Label:
                  id: label_tel
                  text: 'Telefone'
                  font_size: 25
                  size_hint: (1, .10)
                  halign: 'center'

            Label:
                  id: label_email
                  text: 'E-mail'
                  font_size: 25
                  size_hint: (1, .10)
                  halign: 'center'

            Label:
                  id: label_salario
                  text: 'Salario'
                  font_size: 25
                  size_hint: (1, .10)
                  halign: 'center'

            Label:
                  id: resposta
                  text: "Aguardando..."
                  font_size: 28
                  size_hint: (1, .10)

            Button:
                  id: consulta_button
                  text: "Consultar funcion√°rio"
                  font_size: 28
                  size_hint: (1, .10)
                  on_release: 
                        root.consulta_func()

            Button:
                  text: "Voltar para menu principal"
                  font_size: 28
                  size_hint: (1, .10)
                  on_release: 
                        app.root.current = "menu"
                        root.manager.transition.direction = "right"
                        root.clear_fields()