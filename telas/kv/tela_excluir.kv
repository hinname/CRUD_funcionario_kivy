<Tela_Excluir>
      name: "tela_excluir"

      BoxLayout:
            orientation: "vertical"
            size: root.width, root.height

            Label:
                  id: titulo_excluir
                  font_size: 30
                  size_hint: (1, .15)
                  text: "Excluir Dados"

            TextInput:
                  id: input_ID
                  font_size: 25
                  size_hint:(1, .10)
                  multiline: False
                  hint_text: "ID"
                  halign: 'center'

            Button:
                  id: excluir_button
                  text: "Excluir funcion√°rio"
                  font_size: 28
                  size_hint: (1, .10)
                  on_release: 
                        root.excluir_func()

            Button:
                  text: "Voltar para menu principal"
                  font_size: 28
                  size_hint: (1, .10)
                  on_release: 
                        app.root.current = "menu"
                        root.manager.transition.direction = "right"